  </div> 
</div>

<div class="row">
  <div class="col-sm-4">
    <div class="card" id="facts">
      <h4 class="card-title">Name History</h4>
          <p>
            <% for (var i=0; i< postData.length; i++ ) { %>
              <form method="POST" action="/update/<%= postData[i]._id %>" style="display: inline-block">  
                <%= postData[i].name %> 
                <input type="submit" value="update"> 
              </form>
              <form method="POST" action="/delete/<%= postData[i]._id %>" style="display: inline-block">  
                <input type="submit" value="delete">
              </form>
              <br/>
            <% } %>
          </p>
    </div>
</div>


